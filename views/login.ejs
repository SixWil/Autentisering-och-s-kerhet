<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Gör POST förfrågningar till /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email" style="display: flex;"> E-post <pre> </pre> <p class="ErrorTexts"><%= EpostError %></p> </label>
              <input type="email" class="form-control" name="email" value="<%= Epost %>">
            </div>
            <div class="form-group">
              <label for="password" style="display: flex;"> <p class="ErrorTexts"><%= LösenordError_a %></p> <pre> </pre> lösenord <pre> </pre> <p class="ErrorTexts"><%= LösenordError_b %></p></label>
              <input type="password" class="form-control" name="password" value="<%= lösen %>">
            </div>
            <button type="submit" class="btn btn-dark">Logga in</button>
          </form>

        </div>
      </div>
    </div>

